<AnchorPane prefHeight="410.0" prefWidth="547.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.JavaCardsController">
	<children>
      <AnchorPane prefHeight="410.0" prefWidth="547.0" stylesheets="@application.css">
         <children>
            <Label layoutX="49.0" layoutY="41.0" prefHeight="84.0" prefWidth="305.0" text="Java Cards">
               <font>
                  <Font name="Baskerville Old Face" size="65.0" />
               </font>
            </Label>
            <Button fx:id="playBlackJackBtn" layoutX="344.0" layoutY="159.0" mnemonicParsing="false" onAction="#playBlackJackClicked" prefHeight="50.0" prefWidth="105.0" text="Play Blackjack">
               <font>
                  <Font name="Baskerville Old Face" size="14.0" />
               </font>
            </Button>
            <Button fx:id="playGoFishBtn" layoutX="264.0" layoutY="244.0" mnemonicParsing="false" onAction="#playGoFIshClicked" prefHeight="50.0" prefWidth="105.0" text="Play Go Fish">
               <font>
                  <Font name="Baskerville Old Face" size="14.0" />
               </font>
            </Button>
            <Label layoutX="49.0" layoutY="136.0" prefHeight="17.0" prefWidth="105.0" text="Quick Options:">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="12.0" />
               </font>
            </Label>
            <Label layoutX="52.0" layoutY="161.0" text="Player Name:">
               <font>
                  <Font name="Bookman Old Style Italic" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="tf_name" layoutX="55.0" layoutY="184.0" onAction="#setUserName" />
            <Label layoutX="49.0" layoutY="228.0" prefHeight="16.0" prefWidth="65.0" text="Mode:">
               <font>
                  <Font name="Bookman Old Style Italic" size="12.0" />
               </font>
            </Label>
            <RadioButton fx:id="rb_default" layoutX="58.0" layoutY="253.0" mnemonicParsing="false" onAction="#rb_defaultClicked" selected="true" text="Default">
