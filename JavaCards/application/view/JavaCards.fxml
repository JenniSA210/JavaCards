                  <Font name="Bookman Old Style" size="12.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="ToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rb_dark" layoutX="59.0" layoutY="276.0" mnemonicParsing="false" onAction="#rb_darkClicked" text="Dark Mode" toggleGroup="$ToggleGroup">
               <font>
                  <Font name="Bookman Old Style" size="12.0" />
               </font>
            </RadioButton>
            <ImageView fitHeight="84.0" fitWidth="342.0" layoutY="326.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="84.0" fitWidth="280.0" layoutX="274.0" layoutY="326.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
